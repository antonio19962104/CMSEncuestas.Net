@{
    var _token = ViewContext.RouteData.Values["_token"].ToString();
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login - CmsEncuestas</title>
    <meta charset="utf-8" />
</head>
<body>
    @{ 
        if (_token == "404")
        {
            <script>
                alert("No encontrado");
            </script>
        }
        if (_token == "error")
        {
            <script>
                alert("Excepcion en el proceso");
            </script>
        }
        else
        {
            <h3>Hello</h3>
        }
    }

</body>
</html>